# CTM-AbsoluteZero Environment Variables
# Copy this file to .env and customize as needed

# API Keys (NEVER commit these to the repository)
CLAUDE_API_KEY=your_claude_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Security Settings (CHANGE THESE in production)
AUTH_USERNAME=admin
AUTH_PASSWORD=changez_ce_mot_de_passe_en_production

# System Configuration
CTM_AZ_TOKEN_OPTIMIZATION_MODE=balanced     # Options: aggressive, balanced, minimal
CTM_AZ_MAX_WORKERS=4                       # Maximum number of parallel workers

# Logging and Debug
CTM_AZ_LOGGING_LEVEL=info                  # Options: debug, info, warning, error, critical
CTM_AZ_DASH_DEBUG=false                    # Enable/disable debug mode for dashboard

# Performance
CTM_AZ_PERFORMANCE_CUDA_ENABLED=true       # Enable/disable CUDA for GPU acceleration

# Service-specific settings
CORE_API_URL=http://localhost:8000          # URL of the core service API