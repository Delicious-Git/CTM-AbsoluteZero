# CTM-AbsoluteZero Environment Variables
# Copy this file to .env and customize as needed

# API Keys (NEVER commit these to the repository)
CLAUDE_API_KEY=your_claude_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Security Settings (CHANGE THESE in production)
AUTH_USERNAME=admin
AUTH_PASSWORD=changez_ce_mot_de_passe_en_production

# System Configuration
TOKEN_OPTIMIZATION_MODE=balanced     # Options: aggressive, balanced, minimal
MAX_WORKERS=4                       # Maximum number of parallel workers

# Logging and Debug
LOG_LEVEL=INFO                      # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DASH_DEBUG=false                    # Enable/disable debug mode for dashboard

# Performance
CUDA_ENABLED=true                   # Enable/disable CUDA for GPU acceleration

# Service-specific settings
CORE_API_URL=http://ctm-az-core:8000  # URL of the core service API